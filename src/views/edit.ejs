<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
    <link rel="stylesheet" href="/css/styles.css" />

</head>
<body>
    <div><%= JSON.stringify(userEdit) %></div>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create user</a>
      </div>
    <div class="form">
      <form action="/edit-user-submit/<%= (userEdit[0].id) %>" method="POST">
        <div class="input-group">
          <label for="">Email</label>
          <br />
          <input type="text" name="email" value=<%= (userEdit[0].email) %> />
        </div>
        <div class="input-group">
          <label for="">Name</label>
          <br />
          <input type="text" name="name"  value=<%= (userEdit[0].name) %> />
        </div>
        <div class="input-group">
          <label for="">City</label>
          <br />
          <input type="text" name="city"  value=<%= (userEdit[0].city) %> />
        </div>
        <div class="input-group" style="margin-top: 20px">
          <button style="padding: 10px 20px" type="submit">Save</button>
        </div>
      </form>
    </div>
</body>
</html>